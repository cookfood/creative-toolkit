<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <title>COOK - Creative Toolkit</title>

    @Styles.Render("~/bundles/css")

    @*
        Typekit Script

        <script src="https://use.typekit.net/qqs7rbs.js"></script>
        <script>try{Typekit.load({ async: true });}catch(e){}</script>
    *@

    <script type="text/javascript" src="//fast.fonts.net/jsapi/ffb6047a-318c-4103-9dc5-be74424cef9d.js"></script>

</head>

<body class="modal-hidden modal-login-hidden">

    <div class="body-wrap">

        <header class="masthead">
            <div class="inner">
                <div class="grid nopadding--top-bottom">
                    <div class="grid__col--12">

                        <a href="~/" class="logo__link">
                            <img src="~/Content/images/logo-full-white.png" class="responsive-image" />
                        </a>

                        <p class="lead">Creative Toolkit</p>
                        <p class="banner">
                            <span>User interface guidelines</span><br />
                            <span>for COOK digital products</span>
                        </p>
                    </div>
                </div>
            </div>
        </header><!-- end masthead -->


        <div class="content-wrap">

            <div class="grid">

                <aside class="grid__col--3 sidebar__nav">
                    <div class="content">
                        <nav class="navigation">
                            <ul>
                                <li>
                                    <a href="#fonts" class="active">Typography</a>
                                </li>
                                <li>
                                    <a href="#colours">Colours</a>
                                </li>
                                <li>
                                    <a href="#buttons">Buttons &amp; Links</a>
                                </li>
                                <li>
                                    <a href="#navigation">Navigation</a>
                                </li>
                                <li>
                                    <a href="#form">Form Elements</a>
                                </li>
                                <li>
                                    <a href="#icons">Icons</a>
                                </li>
                                <li>
                                    <a href="#web-grid">Grid</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </aside>

                <div class="grid__col--9 main__content">
                    <div class="content">
                        @RenderBody()
                    </div>
                </div>

            </div>

        </div>

    </div><!--content-wrap end-->

    <!--Scripts-->

    @*@Scripts.Render("~/bundles/js")*@

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>

    @RenderSection("Scripts", false)
</body>
</html>